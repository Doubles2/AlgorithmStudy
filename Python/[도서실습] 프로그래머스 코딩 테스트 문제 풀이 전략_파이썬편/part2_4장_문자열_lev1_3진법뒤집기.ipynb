   "source": [
    "def solution(n):\n",
    "    answer = 0\n",
    "    list_ternary = []\n",
    "\n",
    "    while n > 0:\n",
    "        n, r = divmod(n, 3)\n",
    "        list_ternary.append(r)\n",
    "\n",
    "    for x in list_ternary:\n",
    "        answer = answer * 3 + int(x)\n",
    "\n",
    "    return answer"
   ]
